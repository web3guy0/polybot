# Polybot Configuration
# Copy this file to .env and fill in your values

# ===================
# TELEGRAM BOT
# ===================
# Get your bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Your Telegram chat ID for receiving alerts
# Get it from @userinfobot or @RawDataBot
TELEGRAM_CHAT_ID=

# ===================
# TRADING ASSET
# ===================
# The cryptocurrency to trade predictions on
# Supported: BTC, ETH, SOL (default: BTC)
TRADING_ASSET=BTC

# Enable the prediction trading system
BTC_ENABLED=true

# ===================
# TRADING SETTINGS
# ===================
# Enable automatic trading (WARNING: Use at own risk)
BTC_AUTO_TRADE=false

# Only send alerts, don't execute trades
BTC_ALERT_ONLY=true

# Minimum signal score to trigger trade (-100 to 100)
BTC_MIN_SIGNAL_SCORE=25

# Minimum confidence percentage (0-100)
BTC_MIN_CONFIDENCE=25

# Maximum bet per trade
BTC_MAX_BET_SIZE=50

# Odds range (0-1, e.g., 0.35 = 35 cents)
BTC_MIN_ODDS=0.35
BTC_MAX_ODDS=0.65

# Cooldown between trades
BTC_COOLDOWN=2m

# ===================
# RISK MANAGEMENT
# ===================
# Total bankroll for position sizing
BANKROLL=100

# Maximum bet size per trade
RISK_MAX_BET_SIZE=10

# Stop trading after this daily loss
RISK_MAX_DAILY_LOSS=50

# Maximum trades per day
RISK_MAX_DAILY_TRADES=20

# Maximum total exposure at once
RISK_MAX_DAILY_EXPOSURE=100

# Minimum signal confidence (0-1)
RISK_MIN_CONFIDENCE=0.60

# Minimum market liquidity
RISK_MIN_LIQUIDITY=1000

# Time between trades
RISK_TRADE_COOLDOWN=30s

# Skip weak/choppy signals
RISK_CHOP_FILTER=true
RISK_CHOP_THRESHOLD=25.0

# ===================
# POLYMARKET API
# ===================
# Polymarket API endpoints (defaults should work)
POLYMARKET_API_URL=https://gamma-api.polymarket.com
POLYMARKET_WS_URL=wss://ws-subscriptions-clob.polymarket.com/ws
POLYMARKET_CLOB_URL=https://clob.polymarket.com

# ===================
# WALLET (for trading)
# ===================
# Private key for trading (DO NOT COMMIT!)
# WALLET_PRIVATE_KEY=
# WALLET_ADDRESS=

# ===================
# DATABASE
# ===================
# SQLite database path
DATABASE_PATH=./data/polybot.db

# ===================
# LOGGING
# ===================
# Enable debug mode
DEBUG=false

# Log level: debug, info, warn, error
LOG_LEVEL=info
